#!/usr/bin/env bash

export TRACK="gleam"
export WORKSPACE="$SOURCE_JEFF/exercism/$TRACK"

function exercism-submit(){
  clear
  local message="$TRACK $(basename $(pwd))"
  echo "$message"
  exercism submit
  git add --all
  git commit -m "$message"
  cd ..
}

function exer-download(){
  exercism download --track=$TRACK --exercise=$1
  cd $WORKSPACE/$1
}

function exer-edit(){
  cd $WORKSPACE/$1
  fd -g "**/*.gleam" | xargs hx
}

alias es="exercism-submit"
alias ed="exer-download"
alias ee="hx **/*.gleam"
alias eee="exer-edit"

alias gt="gleam test"
alias gb="gleam build"
alias gr="gleam run"

# enumerate aliases
alias | rg "gleam|exer"
